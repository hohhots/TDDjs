<project name="MyTDDjs">
	<property name="homeDir" value="/home/brgd" />
	<property name="projectDir" value="${homeDir}/MyProjects/MyTDDjs" />
	
	<property name="gitDir" value="/opt/GitRepository" />
	<property name="toolsGitDir" value="${git}/${tools}/" />
	<property name="jasmineGitDir" value="${toolsGitDir}/jasmine" />

	<property name="toolsDir" value="tools" />

	<property name="gitconfig" value="${homeDir}/.gitconfig" />
	

	<property name="jasmine" value="jasmine" />

	<target name="clear">
		<delete dir = "${toolsDir}" failonerror = "false" />
	</target>

	<target name="init" depends="clear">
		<mkdir dir = "${toolsDir}" />
		<exec executable = "git" dir = "${toolsDir}">
            		<arg value = "clone" />
            		<arg value = "${jasmineGit}" />
      		</exec>
	</target>

	<target name="push">
		<exec executable = "sudo" dir = ".">
            		<arg value = "git" />
            		<arg value = "push" />
            		<arg value = "master" />
       		</exec>
	</target>

	<target name="status" depends="clear">
		<exec executable = "git" dir = ".">
            		<arg value = "status" />
       		</exec>
	</target>

	<target name="clearAntInit">
		<delete file = "${gitconfig}"  />
	</target>

	<target name="antInit" depends="clearAntInit">
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "user.name" />
            		<arg value = "brgd" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "user.email" />
            		<arg value = "hohhots@gmail.com" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "push.default" />
            		<arg value = "matching" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "branch.autosetuprebase" />
            		<arg value = "always" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "color.ui" />
            		<arg value = "true" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "color.status" />
            		<arg value = "auto" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "color.branch" />
            		<arg value = "auto" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "core.editor" />
            		<arg value = "vi" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "alias.co" />
            		<arg value = "checkout" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "alias.ci" />
            		<arg value = "commit" />
      		</exec>
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "alias.st" />
            		<arg value = "status" />
      		</exec>
  		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "alias.br" />
            		<arg value = "branch" />
      		</exec>
	
	</target>
          
		<exec executable = "git">
            		<arg value = "config" />
            		<arg value = "--global" />
            		<arg value = "alias.hist" />
            		<arg value = "log" />
			<arg value = "--pretty=format:\&quot;%h %ad | %s%d [%an]\&quot;" />            		
			<arg value = "--graph" />
            		<arg value = "--date=short" />
      		</exec>
</project>

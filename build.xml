<project>
	<property name="git" value="/opt/GitRepository/" />
	<property name="libsGit" value="${git}libs/" />
	<property name="jasmineGit" value="${libsGit}/jasmine" />

	<property name="lib" value="lib" />
	<property name="jasmine" value="jasmine" />

	<target name="clear">
		<delete dir = "${lib}" failonerror = "false" />
	</target>

	<target name="init" depends="clear">
		<mkdir dir = "${lib}" />
		<exec executable = "git" dir = "${lib}">
            		<arg value = "clone" />
            		<arg value = "${jasmineGit}" />
      		</exec>
	</target>

	<target name="push">
		<exec executable = "sudo" dir = ".">
            		<arg value = "git" />
            		<arg value = "push" />
            		<arg value = "origin" />
            		<arg value = "master" />
       		</exec>
	</target>

	<target name="status" depends="clear">
		<exec executable = "git" dir = ".">
            		<arg value = "status" />
       		</exec>
	</target>
</project>
